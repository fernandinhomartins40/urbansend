{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "backend/package.json",
          "frontend/package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "fix",
      "release": "patch"
    },
    {
      "type": "perf",
      "release": "patch"
    },
    {
      "type": "revert",
      "release": "patch"
    },
    {
      "type": "docs",
      "release": false
    },
    {
      "type": "style",
      "release": false
    },
    {
      "type": "refactor",
      "release": false
    },
    {
      "type": "test",
      "release": false
    },
    {
      "type": "build",
      "release": false
    },
    {
      "type": "ci",
      "release": false
    },
    {
      "type": "chore",
      "release": false
    },
    {
      "scope": "no-release",
      "release": false
    },
    {
      "breaking": true,
      "release": "major"
    }
  ]
}