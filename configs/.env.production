# UrbanSend Production Environment
NODE_ENV=production
PORT=3001

# Domain and URLs
DOMAIN=www.ultrazend.com.br
PUBLIC_URL=https://www.ultrazend.com.br
API_URL=https://www.ultrazend.com.br/api

# Database
DATABASE_URL=/var/www/urbansend/data/database.sqlite

# Security
JWT_SECRET=urbansend_jwt_secret_key_production_2024_secure_32_chars_minimum
COOKIE_SECRET=urbansend_cookie_secret_production_2024_secure_32_chars_min
API_KEY_SALT=urbansend_api_key_salt_production_2024_secure_32_chars_min

# CORS
ALLOWED_ORIGINS=https://www.ultrazend.com.br,http://www.ultrazend.com.br

# SMTP Configuration
SMTP_SERVER_PORT=25
SMTP_HOSTNAME=www.ultrazend.com.br
SMTP_USER=noreply@ultrazend.com.br
SMTP_PASSWORD=

# Email Settings
FROM_EMAIL=noreply@ultrazend.com.br
FROM_NAME=UltraZend

# Application Settings
LOG_LEVEL=info
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/urbansend/data/uploads