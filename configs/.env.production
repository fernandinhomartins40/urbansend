# UrbanSend Production Environment
NODE_ENV=production
PORT=3001

# Domain and URLs
DOMAIN=your-domain.com
PUBLIC_URL=https://your-domain.com
API_URL=https://your-domain.com/api

# Database
DATABASE_URL=/var/www/urbansend/data/database.sqlite

# Security
JWT_SECRET=urbansend_jwt_secret_key_production_2024_secure_32_chars_minimum
COOKIE_SECRET=urbansend_cookie_secret_production_2024_secure_32_chars_min
API_KEY_SALT=urbansend_api_key_salt_production_2024_secure_32_chars_min

# CORS
ALLOWED_ORIGINS=https://your-domain.com,http://your-domain.com

# SMTP Configuration
SMTP_SERVER_PORT=587
SMTP_HOSTNAME=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Settings
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=UrbanSend

# Application Settings
LOG_LEVEL=info
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/urbansend/data/uploads