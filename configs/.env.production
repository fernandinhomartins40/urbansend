# =============================================================================
# ULTRAZEND ENTERPRISE - PRODUCTION CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=3001
HTTPS_PORT=443
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=/var/www/urbansend/data/database.sqlite

# Security Configuration
JWT_SECRET=ultrazend_jwt_secret_key_production_2024_secure_32_chars_minimum_enterprise
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=ultrazend_jwt_refresh_secret_production_2024_secure_32_chars_min
JWT_REFRESH_EXPIRES_IN=30d
COOKIE_SECRET=ultrazend_cookie_secret_production_2024_secure_32_chars_minimum

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
ALLOWED_ORIGINS=https://ultrazend.com.br,https://www.ultrazend.com.br
FRONTEND_URL=https://www.ultrazend.com.br
API_BASE_URL=https://www.ultrazend.com.br

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_NAME=UltraZend
SMTP_FROM_EMAIL=system@urbansend.local
SMTP_HOSTNAME=www.ultrazend.com.br
SMTP_SERVER_PORT=25

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/urbansend/logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_ONLY=false

# Performance Configuration
BCRYPT_SALT_ROUNDS=12

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_DETAILED_HEALTH_CHECKS=true
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CORRELATION_IDS=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Trust Proxy Configuration
TRUST_PROXY=1

# Legacy Compatibility Variables
DOMAIN=www.ultrazend.com.br
PUBLIC_URL=https://www.ultrazend.com.br
API_URL=https://www.ultrazend.com.br/api
CORS_ORIGIN=https://www.ultrazend.com.br
EMAIL_FROM_NAME=UltraZend
EMAIL_FROM_ADDRESS=system@urbansend.local
FROM_EMAIL=system@urbansend.local
FROM_NAME=UltraZend
WEBHOOK_SECRET=ultrazend-webhook-secret-2024-change-this
SESSION_SECRET=ultrazend-session-secret-2024-change-this
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/urbansend/data/uploads

# Additional Enterprise Settings
API_KEY_SALT=ultrazend_api_key_salt_production_2024_secure_32_chars_min
SMTP_SYSTEM_PASSWORD=ultrazend-system-smtp-password-2024
SMTP_NOREPLY_PASSWORD=ultrazend-noreply-smtp-password-2024

# Backup Configuration  
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/www/urbansend/data/backups

# =============================================================================
# ENTERPRISE HEALTH & MONITORING
# =============================================================================
HEALTH_CHECK_ENABLED=true
MONITORING_ENABLED=true
ERROR_LOG_PATH=/var/www/urbansend/logs/error.log