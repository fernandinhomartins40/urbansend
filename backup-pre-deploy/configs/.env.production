# UltraZend Production Environment Variables

# Application
NODE_ENV=production
PORT=3001

# Security
JWT_SECRET=ultrazend_jwt_secret_key_production_2024_secure_32_chars_minimum
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL=/var/www/ultrazend/data/database.sqlite

# Domain and URLs
DOMAIN=www.ultrazend.com.br
PUBLIC_URL=https://www.ultrazend.com.br
API_URL=https://www.ultrazend.com.br/api

# CORS allowed origins
ALLOWED_ORIGINS=https://www.ultrazend.com.br,http://www.ultrazend.com.br

# API Keys and Security
API_KEY_SALT=ultrazend_api_key_salt_production_2024_secure_32_chars_min
COOKIE_SECRET=ultrazend_cookie_secret_production_2024_secure_32_chars_min

# CORS & Frontend
CORS_ORIGIN=https://www.ultrazend.com.br
FRONTEND_URL=https://www.ultrazend.com.br

# SMTP Server Configuration
SMTP_HOSTNAME=www.ultrazend.com.br
SMTP_SERVER_PORT=25

# SMTP Client Configuration
# Para desenvolvimento/testes: use MailHog
# Para produção: use um provedor como SendGrid, SES, etc.
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SMTP System Account Passwords (para SMTP Server interno)
SMTP_SYSTEM_PASSWORD=ultrazend-system-smtp-password-2024
SMTP_NOREPLY_PASSWORD=ultrazend-noreply-smtp-password-2024

# Email Service Configuration
EMAIL_FROM_NAME=UltraZend
EMAIL_FROM_ADDRESS=noreply@ultrazend.com.br
FROM_EMAIL=noreply@ultrazend.com.br
FROM_NAME=UltraZend

# Webhook Configuration
WEBHOOK_SECRET=ultrazend-webhook-secret-2024-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/ultrazend/data/uploads
