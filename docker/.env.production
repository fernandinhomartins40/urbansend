# UltraZend Docker Production Environment
NODE_ENV=production
PORT=3001

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=ultrazend_docker_jwt_secret_production_2024_32_chars_minimum
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL=/var/www/ultrazend/data/database.sqlite

# Domain
DOMAIN=localhost
PUBLIC_URL=http://localhost
API_URL=http://localhost/api

# CORS
ALLOWED_ORIGINS=http://localhost,https://localhost
CORS_ORIGIN=http://localhost
FRONTEND_URL=http://localhost

# SMTP Server
SMTP_HOSTNAME=localhost
SMTP_SERVER_PORT=25

# SMTP Client (MailHog for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email Service
EMAIL_FROM_NAME=UltraZend
EMAIL_FROM_ADDRESS=noreply@localhost
FROM_EMAIL=noreply@localhost
FROM_NAME=UltraZend

# Security
API_KEY_SALT=ultrazend_docker_api_key_salt_production_2024_32_chars
COOKIE_SECRET=ultrazend_docker_cookie_secret_production_2024_32_chars
WEBHOOK_SECRET=ultrazend-docker-webhook-secret-2024
SESSION_SECRET=ultrazend-docker-session-secret-2024

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/ultrazend/logs/app.log
ERROR_LOG_PATH=/var/www/ultrazend/logs/error.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/ultrazend/data/uploads

# Health Check & Monitoring
HEALTH_CHECK_ENABLED=true
MONITORING_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/www/ultrazend/data/backups