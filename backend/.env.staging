# Staging Environment Configuration
NODE_ENV=staging

# Server Configuration
PORT=3001
HTTPS_PORT=443
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:./database_staging.sqlite

# Security Configuration
# Use different secrets for staging
JWT_SECRET=staging-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=staging-refresh-secret-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d
COOKIE_SECRET=staging-cookie-secret-at-least-32-characters-long

# Rate Limiting Configuration (More lenient for testing)
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
ALLOWED_ORIGINS=https://staging.yourdomain.com,http://localhost:3000
FRONTEND_URL=https://staging.yourdomain.com
API_BASE_URL=https://api-staging.yourdomain.com

# SMTP Configuration (Test SMTP or local)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_FROM_NAME=UltraZend Staging
SMTP_FROM_EMAIL=staging@yourdomain.com
SMTP_HOSTNAME=staging.yourdomain.com
SMTP_SERVER_PORT=25

# Logging Configuration (More verbose for staging)
LOG_LEVEL=info
LOG_FILE_PATH=./logs/staging.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Security Headers
HSTS_MAX_AGE=3600
CSP_REPORT_ONLY=true

# Performance Configuration
BCRYPT_SALT_ROUNDS=10

# Feature Flags (Enable all features for testing)
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# External Services
REDIS_URL=redis://localhost:6379
WEBHOOK_SECRET=staging-webhook-secret

# Trust Proxy
TRUST_PROXY=1

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=15000