# Test Environment Configuration
NODE_ENV=test

# Database (using in-memory SQLite for tests)
DATABASE_PATH=:memory:

# JWT
JWT_SECRET=test-jwt-secret-ultra-secure-key-for-testing

# SMTP Configuration
SMTP_HOSTNAME=test.ultrazend.com.br
SMTP_SERVER_PORT=25

# DKIM Configuration
DKIM_SELECTOR=default
DKIM_DOMAIN=test.ultrazend.com.br

# Redis Configuration (test database)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# API Configuration
API_BASE_URL=http://localhost:3001
TEST_API_KEY=test-api-key-ultra-secure

# Rate Limiting (more permissive for tests)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=error

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
MAIL_FROM_NAME=ULTRAZEND Test
MAIL_FROM_EMAIL=noreply@test.ultrazend.com.br

# Test specific
IS_TESTING=true