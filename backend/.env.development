# ðŸš€ ULTRAZEND - Development Environment Configuration

# Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=./ultrazend.sqlite

# JWT Configuration
JWT_SECRET=ultrazend-development-jwt-secret-2024
JWT_EXPIRES_IN=24h

# SMTP Configuration - Development (COMPLETAMENTE DESABILITADO)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_ENABLED=false
SMTP_SERVER_ENABLED=false
ENABLE_SMTP_HEALTH_CHECK=false

# UltraZend SMTPServer Configuration - Development (DESABILITADO)
SMTP_HOSTNAME=localhost
SMTP_MX_PORT=2526
SMTP_SUBMISSION_PORT=587
SMTP_USERNAME=noreply@ultrazend.local
DISABLE_ALL_SMTP=true

# DKIM Configuration - Development
DKIM_PRIVATE_KEY_PATH=./configs/dkim-keys/ultrazend.com.br-default-private.pem
DKIM_SELECTOR=default
DKIM_DOMAIN=ultrazend.local
DKIM_ENABLED=false

# Redis Configuration - Development (Disabled)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_URL=redis://127.0.0.1:6379
REDIS_ENABLED=false

# Rate Limiting (Development - Permissive)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=300000  # 5 minutes
EMAIL_RATE_LIMIT_MAX=100
EMAIL_RATE_LIMIT_WINDOW=3600000  # 1 hour

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
SESSION_SECRET=ultrazend-session-secret-dev
CSRF_SECRET=ultrazend-csrf-secret-dev

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_ERROR_PATH=./logs/error.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Email Configuration
MAIL_FROM_NAME=ULTRAZEND Development
MAIL_FROM_EMAIL=noreply@ultrazend.local
SUPPORT_EMAIL=support@ultrazend.local

# Performance & Monitoring - Development
ENABLE_PROMETHEUS_METRICS=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000  # 60 seconds
MAX_REQUEST_SIZE=10mb
BODY_PARSER_LIMIT=10mb

# Queue Configuration - Development
QUEUE_CONCURRENCY=2
QUEUE_MAX_ATTEMPTS=3
QUEUE_DELAY_RETRY=10000  # 10 seconds
QUEUE_CLEANUP_INTERVAL=300000  # 5 minutes

# SMTP Delivery Configuration - Development
SMTP_POOL_SIZE=2
SMTP_MAX_CONNECTIONS=10
SMTP_CONNECTION_TIMEOUT=30000  # 30 seconds
SMTP_SOCKET_TIMEOUT=60000     # 1 minute
SMTP_RETRY_ATTEMPTS=2
SMTP_RETRY_DELAY=2000         # 2 seconds

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# Cache Configuration
CACHE_TTL=60000               # 1 minute
CACHE_MAX_KEYS=1000
ENABLE_QUERY_CACHE=true

# Development Features
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_PLAYGROUND=true
ENABLE_API_DOCS=true

# Feature Flags - Development
ENABLE_ANALYTICS=true
ENABLE_TRACKING=false  # Disabled for development
ENABLE_WEBHOOKS=false  # Disabled for development
ENABLE_TEMPLATES=true
ENABLE_DOMAINS=true

# Resource Limits - Development
MAX_EMAILS_PER_HOUR=50
MAX_RECIPIENTS_PER_EMAIL=10
MAX_ATTACHMENTS_PER_EMAIL=5
MAX_TEMPLATE_SIZE=500kb

# Clean up old data - Development
DATA_RETENTION_DAYS=7
CLEANUP_INTERVAL=3600000      # 1 hour

# Development specific
MAINTENANCE_MODE=false

# SMTP Fallback Configuration - Development (MailHog, Mailtrap, etc.)
# Usado quando entrega direta MX falha ou nÃ£o estÃ¡ disponÃ­vel
SMTP_FALLBACK_HOST=localhost
SMTP_FALLBACK_PORT=1025
SMTP_FALLBACK_SECURE=false
SMTP_FALLBACK_USER=
SMTP_FALLBACK_PASS=

# ðŸš€ UNIFIED QUEUE ARCHITECTURE - Fase 2 Implementation
ENABLE_UNIFIED_QUEUE=false
QUEUE_PROCESSING_CONCURRENCY=5
TENANT_PRIORITY_ENABLED=true
TENANT_RATE_LIMITING_ENABLED=true

# Redis Optimizations for Unified Queue
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=60000
REDIS_COMMAND_TIMEOUT=5000