{
  "name": "ultrazend-backend",
  "version": "1.0.0",
  "description": "Clone profissional do Resend.com - Backend",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "rimraf dist && tsc --build --verbose",
    "build:force": "rimraf dist && tsc --noEmitOnError false --skipLibCheck",
    "build:prod": "NODE_ENV=production npm run build:force",
    "build:clean": "rimraf dist node_modules/.cache .tsbuildinfo",
    "build:swagger": "swagger-jsdoc -d swaggerDef.js src/**/*.ts -o swagger.json",
    "start": "node dist/index.js",
    "migrate:latest": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest",
    "migrate:rollback": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:rollback",
    "migrate:make": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:make",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest --testPathPattern=unit --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles",
    "test:e2e": "jest --testPathPattern=e2e --detectOpenHandles",
    "test:performance": "jest --testPathPattern=performance --detectOpenHandles --runInBand",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules package-lock.json",
    "fresh-install": "npm run clean && npm install",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:deps": "npm-check-updates",
    "pre-deploy": "npm run typecheck",
    "dkim:check": "ts-node src/scripts/fix-dkim-issues.ts check",
    "dkim:check:export": "ts-node src/scripts/fix-dkim-issues.ts check --export dkim-report.json",
    "dkim:check:domain": "ts-node src/scripts/fix-dkim-issues.ts check --domain",
    "dkim:migrate": "ts-node src/scripts/fix-dkim-issues.ts migrate",
    "dkim:migrate:dry": "ts-node src/scripts/fix-dkim-issues.ts migrate --dry-run",
    "dkim:migrate:force": "ts-node src/scripts/fix-dkim-issues.ts migrate --force",
    "dkim:migrate:domain": "ts-node src/scripts/fix-dkim-issues.ts migrate --domain",
    "dkim:fix": "ts-node src/scripts/fix-dkim-issues.ts fix",
    "dkim:fix:dry": "ts-node src/scripts/fix-dkim-issues.ts fix --dry-run"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dns-packet": "^5.6.1",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-prom-bundle": "^7.0.0",
    "express-rate-limit": "^7.4.0",
    "generic-pool": "^3.9.0",
    "helmet": "^8.1.0",
    "inversify": "^6.0.2",
    "ioredis": "^5.4.1",
    "jsdom": "^24.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mailparser": "^3.7.4",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.14",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.3",
    "smtp-server": "^3.14.0",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^13.0.0",
    "validator": "^13.12.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/dns-packet": "^5.6.5",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/generic-pool": "^3.1.9",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@types/smtp-server": "^3.5.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
