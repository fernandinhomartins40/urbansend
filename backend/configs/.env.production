# ðŸš€ ULTRAZEND - Production Environment Configuration
# Native PM2 + Nginx deployment

# === CORE SETTINGS ===
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# === DATABASE CONFIGURATION ===
DATABASE_URL=/var/www/ultrazend/backend/ultrazend.sqlite
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=30000

# === REDIS CONFIGURATION ===
REDIS_URL=redis://127.0.0.1:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=ultrazend:

# === JWT CONFIGURATION ===
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_change_this
JWT_REFRESH_EXPIRES_IN=7d

# === SMTP CONFIGURATION ===
SMTP_HOST=127.0.0.1
SMTP_PORT=587
SMTP_SECURE=false
SMTP_AUTH_USER=
SMTP_AUTH_PASS=
SMTP_FROM_NAME=UltraZend
SMTP_FROM_EMAIL=noreply@ultrazend.com.br

# === LOGGING CONFIGURATION ===
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/ultrazend/logs
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30d

# === SECURITY SETTINGS ===
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://www.ultrazend.com.br

# === APPLICATION URLS ===
FRONTEND_URL=https://www.ultrazend.com.br
API_BASE_URL=https://www.ultrazend.com.br/api
WEBHOOK_BASE_URL=https://www.ultrazend.com.br/webhooks

# === FILE UPLOAD ===
UPLOAD_PATH=/var/www/ultrazend/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# === EMAIL PROCESSING ===
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000

# === MONITORING ===
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# === PERFORMANCE ===
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=300

# === SWAGGER ===
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs